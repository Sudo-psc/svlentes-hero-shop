# Environment Configuration
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://svlentes.com.br

# Database
# P3: Connection pooling optimization
# For production with PgBouncer or Prisma Accelerate, use pooled connection URL
# DATABASE_URL="postgresql://user:password@pooler.example.com:6543/svlentes?pgbouncer=true&connection_limit=10"
DATABASE_URL="postgresql://user:password@localhost:5432/svlentes"
# Optional: Direct database URL for migrations (bypasses connection pooler)
# DATABASE_DIRECT_URL="postgresql://user:password@localhost:5432/svlentes"

# Firebase Authentication
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-messaging-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# Firebase Admin SDK (for server-side operations)
FIREBASE_SERVICE_ACCOUNT_KEY='{"type":"service_account","project_id":"..."}' # Full JSON
# OR individual fields:
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n..."
# FIREBASE_CLIENT_EMAIL="firebase-adminsdk@your-project.iam.gserviceaccount.com"

# Clerk Authentication (Alternative/Additional to Firebase)
# Get these from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY="pk_test_your-publishable-key"
CLERK_SECRET_KEY="sk_test_your-secret-key"
# Optional: Custom sign-in/sign-up URLs
# NEXT_PUBLIC_CLERK_SIGN_IN_URL="/sign-in"
# NEXT_PUBLIC_CLERK_SIGN_UP_URL="/sign-up"
# NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL="/area-assinante/dashboard"
# NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL="/area-assinante/dashboard"

# Asaas
ASAAS_ENV="sandbox"
ASAAS_API_KEY_SANDBOX="$aact_hmlg_your_sandbox_key"
ASAAS_API_KEY_PROD="$aact_prod_your_production_key"

# Redis
UPSTASH_REDIS_REST_URL="your-redis-url"
UPSTASH_REDIS_REST_TOKEN="your-redis-token"

# Personalization System
PERSONALIZATION_ENABLED=true
PERSONALIZATION_DEBUG=false
PERSONALIZATION_CACHE_TTL=3600

# A/B Testing
AB_TESTING_ENABLED=true
AB_TESTING_TRAFFIC_ALLOCATION=100

# Localização
DEFAULT_LOCALE=pt-BR
SUPPORTED_LOCALES=pt-BR,en-US,es-ES

# Privacidade
BEHAVIOR_TRACKING_ENABLED=true
BEHAVIOR_DATA_RETENTION_DAYS=90
CONSENT_REQUIRED=true

# Criptografia (LGPD - Dados Médicos Sensíveis)
# Gerar chave segura: openssl rand -base64 32
# ⚠️ NUNCA commitar esta chave - usar secrets management em produção
ENCRYPTION_KEY="your-256-bit-encryption-key-minimum-32-chars"

# Performance
PERSONALIZATION_EDGE_RUNTIME=true
CONTENT_CACHE_MAX_AGE=300

# Analytics
PERSONALIZATION_ANALYTICS_ENABLED=true
CONVERSION_TRACKING_ENABLED=true

# Monitoring
SENTRY_DSN="your-sentry-dsn"
SENTRY_AUTH_TOKEN="your-sentry-auth-token"

# LangSmith (LangChain Observability)
LANGCHAIN_TRACING_V2=true
LANGCHAIN_ENDPOINT="https://api.smith.langchain.com"
LANGCHAIN_API_KEY="your-langsmith-api-key"
LANGCHAIN_PROJECT="svlentes-whatsapp-support"

# OpenAI (for LangChain support processor)
OPENAI_API_KEY="your-openai-api-key"

# WhatsApp
NEXT_PUBLIC_WHATSAPP_NUMBER="553399898026"
